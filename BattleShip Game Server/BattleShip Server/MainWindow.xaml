<Window x:Class="BattleShip_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleShip_Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="GamesCol" Width="240"/>
                <ColumnDefinition x:Name="RRCol" Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock  Grid.Column="0" Text="Games:" Margin="20,8,0,379" FontFamily="Castellar" FontSize="17" FontWeight="UltraBold" Height="20" Width="70" HorizontalAlignment="Left"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.Column="0" Margin="20, 40, 20, 20">
                <TextBox x:Name="txtGame" BorderBrush="Beige"  Background="Bisque" MinHeight="379"/>
            </ScrollViewer>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.Column="1" Margin="20">
            <TextBox x:Name="txtRR" BorderBrush="Beige"  Background="Beige" MinHeight="379"/>
        </ScrollViewer>
    </Grid>
    
            
   
</Window>

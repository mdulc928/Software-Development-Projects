<Window x:Class="armsim.GetBreakPoint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:armsim"
        mc:Ignorable="d"
        Title="BreakPoint" Height="150" Width="200" Background="#FF938080">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Enter a breakpoint address:" FontWeight="Bold" Width="Auto" HorizontalAlignment="Center" Grid.Row="0" Margin="16,0,16,33" Padding="0, 5"/>
        <TextBox x:Name="txtBpAddr" Grid.Row="0" Margin="5,32,5,0" KeyDown="txtBpAddr_KeyDown"/>
        <Button x:Name="btnOK" Grid.Row="1" Width="60" Height="30" Content="OK" Click="btnOK_Click"/>

    </Grid>
</Window>
